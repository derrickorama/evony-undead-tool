{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsxImportSource": "preact",
        "verbatimModuleSyntax": true,
        "paths": {
            "~/src/*": [
                "./src/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "composables/*": [
                "./src/composables/*"
            ],
            "models/*": [
                "./src/models/*"
            ],
            "stores/*": [
                "./src/stores/*"
            ]
        }
    }
}